{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "use_config": {
            "type": "boolean"
        },
        "hyperlink": {
            "type": "string",
            "format": "uri"
        },
        "controls": {
            "type": "object",
            "additionalProperties": {
            "type": "string"
            }
        },
        "control_collections": {
            "type": "object",
            "additionalProperties": {
            "anyOf": [
                {
                "type": "string"
                },
                {
                "type": "array",
                "items": {
                    "type": "string"
                }
                }
            ]
            }
        },
        "automation": {
            "type": "array",
            "items": {
            "type": "object",
                "anyOf": [
                    {
                        "properties": {
                            "change_configuration": {
                                "type": "string"
                            }
                        },
                        "required": ["change_configuration"],
                        "additionalProperties": false
                    },

                    {
                        "properties": {                  
                            "script": {
                                "type": "string"
                            }  
                        },
                        "required": ["script"],
                        "additionalProperties": false
                    },

                    {
                        "properties": { 
                            "elements": {
                                "anyOf": [
                                {
                                    "type": "array",
                                    "items": {
                                    "type": "string"
                                    }
                                },
                                {
                                    "type": "string"
                                }
                                ]
                            },
                            "selector": {
                                "enum": ["foreach", "reverse-foreach", "random"]
                            },
                            "action": {
                                "enum": ["click", "read", "write"]
                            },
                            "value": {
                                "type": "string"
                            },
                            "variable": {
                                "type": "string"
                            }
                        },
                        "additionalProperties": false,
                        "allOf": [
                            {
                                "if": {
                                "properties": {
                                    "action": {
                                    "const": "click"
                                    }
                                }
                                },
                                "then": {
                                    "required": ["elements", "selector", "action"]
                                }
                            },
                            {
                                "if": {
                                "properties": {
                                    "action": {
                                    "const": "write"
                                    }
                                }
                                },
                                "then": {
                                    "required": ["elements", "selector", "action", "value"]
                                }
                            },
                            {
                                "if": {
                                "properties": {
                                    "action": {
                                    "const": "read"
                                    }
                                }
                                },
                                "then": {
                                    "required": ["elements", "selector", "action", "variable"]
                                }
                            }
                        ]
                    },
                    {
                        "properties": {                             
                            "element": {
                                "type": "string"
                            },
                            "action": {
                                "enum": ["click", "read", "write"]
                            },
                            "value": {
                                "type": "string"
                            },
                            "variable": {
                                "type": "string"
                            }
                        },
                        "additionalProperties": false,
                        "allOf": [
                            {
                                "if": {
                                "properties": {
                                    "action": {
                                    "const": "click"
                                    }
                                }
                                },
                                "then": {
                                    "required": ["element", "action"]
                                }
                            },
                            {
                                "if": {
                                "properties": {
                                    "action": {
                                    "const": "write"
                                    }
                                }
                                },
                                "then": {
                                    "required": ["element", "action", "value"]
                                }
                            },
                            {
                                "if": {
                                "properties": {
                                    "action": {
                                    "const": "read"
                                    }
                                }
                                },
                                "then": {
                                    "required": ["element", "action", "variable"]
                                }
                            }
                        ]
                    }

                ]
            }
        }
    },
    "required": ["use_config"],
    "additionalProperties": false
  }
  